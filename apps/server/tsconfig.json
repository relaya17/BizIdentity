{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,

    "baseUrl": "./",
    "paths": {
      "@shared/*": ["../../packages/shared/src/*"]
    },

    // ✅ שנה את זה כך:
    "tsBuildInfoFile": "../../.tsbuildinfo/server.tsbuildinfo"
  },
  "include": ["src/**/*.ts"],
  "references": [
    { "path": "../../packages/shared" }
  ]
}
 